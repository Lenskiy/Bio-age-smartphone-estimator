<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:gauge="http://schemas.android.com/apk/res/org.codeandmagic.android.gauge.demo"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/title"
        android:layout_width="fill_parent"
        android:layout_height="80dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/back2"
        android:gravity="center"
        android:text="Your Check Result"
        android:textColor="#ffffff"
        android:textSize="30dp" />

    <TextView
        android:id="@+id/title_sub"
        android:layout_width="fill_parent"
        android:layout_height="70dp"
        android:layout_gravity="center_horizontal"
        android:background="#000000"
        android:gravity="center"
        android:textColor="#ffffff"
        android:textSize="45dp" />

    <org.codeandmagic.android.gauge.GaugeView
        android:id="@+id/gauge_view1"
        android:layout_width="fill_parent"
        android:layout_height="200dp"
        android:background="@drawable/back" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="100dp"
        android:background="@drawable/back2"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/bottom"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:text="Your Age is 46years old."
            android:textColor="#ff0000"
            android:textSize="20dp" />
    </LinearLayout>

</LinearLayout>